<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success d-flex justify-content-between flex-row">
    
    <!---left side nav-->
    <div class="d-flex flex-row">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
    </div>

    <!--- right side buttons-->
    <div class="nav navbar-nav float-md-right">
      <% if (user) { %>
        <form class="form-inline" method="POST" action="/logout">
          <div style="margin-left: 1em;">
            Logged in as: <%= user.email %><button class="btn btn-outline-dark" type="submit"
                style=" margin-left: 1em;">Logout</button>
          </div>
        </form>
        <% } else { %>
          <a href="/login" class="btn btn btn-outline-dark">Login</a>
          <a style="margin-left: 0.5em;" class="btn btn-outline-dark" href="/register">Register</a>
          <% } %>
    </div>
    
  </nav>
</header>